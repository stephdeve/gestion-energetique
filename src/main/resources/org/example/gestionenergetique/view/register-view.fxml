<?xml version="1.0" encoding="UTF-8"?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gestionenergetique.controller.RegisterController"
            stylesheets="@register.css"
            prefHeight="600.0" prefWidth="1000.0">

    <!-- Conteneur principal -->
    <VBox alignment="CENTER" spacing="30" styleClass="register-container"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- Logo / Titre -->
        <VBox alignment="CENTER" spacing="10">
            <ImageView fitWidth="80" fitHeight="80">

            </ImageView>
            <Label text="Smart Energy Manager" styleClass="app-title" />
            <Label text="Créez votre compte" styleClass="app-subtitle" />
        </VBox>

        <!-- Formulaire d'inscription -->
        <VBox alignment="CENTER" spacing="20" styleClass="form-box">
            <Label text="Nouveau compte" styleClass="form-title" />

            <!-- Champ Nom -->
            <HBox styleClass="input-container" alignment="CENTER_LEFT">
                <FontAwesomeIconView glyphName="USER" size="18" styleClass="input-icon" />
                <TextField fx:id="nomField" styleClass="form-input" promptText="Votre nom complet" />
            </HBox>

            <!-- Champ Email -->
            <HBox styleClass="input-container" alignment="CENTER_LEFT">
                <FontAwesomeIconView glyphName="ENVELOPE" size="18" styleClass="input-icon" />
                <TextField fx:id="emailField" styleClass="form-input" promptText="votre@email.com" />
            </HBox>

            <!-- Champ Mot de passe -->
            <HBox styleClass="input-container" alignment="CENTER_LEFT">
                <FontAwesomeIconView glyphName="LOCK" size="18" styleClass="input-icon" />
                <PasswordField fx:id="passwordField" styleClass="form-input" promptText="••••••••" />
            </HBox>

            <!-- Confirmation Mot de passe -->
            <HBox styleClass="input-container" alignment="CENTER_LEFT">
                <FontAwesomeIconView glyphName="LOCK" size="18" styleClass="input-icon" />
                <PasswordField fx:id="confirmPasswordField" styleClass="form-input" promptText="Confirmez votre mot de passe" />
            </HBox>

            <!-- Messages -->
            <Label fx:id="errorLabel" styleClass="error-message" visible="false" />
            <Label fx:id="successLabel" styleClass="success-message" visible="false" />

            <!-- Bouton d'inscription -->
            <Button text="Créer le compte" onAction="#handleRegister" styleClass="register-button" />

            <!-- Lien de connexion -->
            <Hyperlink text="Déjà un compte? Se connecter" onAction="#retourLogin" styleClass="login-link" />
        </VBox>

        <!-- Pied de page -->
        <Label text="© 2023 Smart Energy Manager - Tous droits réservés" styleClass="footer-text" />
    </VBox>

    <!-- Image décorative -->
    <ImageView fitWidth="500" fitHeight="600" preserveRatio="true" styleClass="decor-image"
               AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" />
</AnchorPane>